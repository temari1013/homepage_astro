---
import BaseLayout from '../../layouts/BaseLayout.astro'
import BlogPost from '../../components/BlogPost.astro'

export async function getStaticPaths() {
  const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }))

  const uniqueTags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())]

  return uniqueTags.map((tags) => {
    const filteredPosts = allPosts.filter((post: any) => post.frontmatter.tags.includes(tags))
    return {
      params: { tags },
      props: { posts: filteredPosts }
    }
  })
}

const { tags } = Astro.params
const { posts } = Astro.props
---

<BaseLayout pageTitle={tags}>
  <div class="max-w-3xl mx-auto mt-4 text-slate-900">
    <div class="max-w-3xl mx-auto mt-4 px-4 pt-4 pb-8 bg-white shadow-lg semi-rounded rounded-lg min-h-screen prose">
      <p>タグ:{tags}</p>
      <ul>
        {posts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
      </ul>
    </div>
  </div>
</BaseLayout>
