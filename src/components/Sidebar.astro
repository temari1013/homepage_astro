---
import type { MarkdownInstance } from 'astro'
const importedPosts = import.meta.glob('../pages/posts/*.md', { eager: true })
const allPosts = Object.values(importedPosts).reverse() as MarkdownInstance<Record<string, any>>[]
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]
---

<p class="text-slate-700 text-2xl font-semibold">タグ検索</p>
<div class="tags">
  {
    tags.map((tag) => (
      <p
        class="tag
      inline-block
      mx-1 my-0.5
      px-2 py-1 
      text-lg text-sm text-slate-100 
      bg-[#FF7043]  
      rounded-lg
      hover:shadow-xl
   hover:opacity-60
   transition-all duration-300 ease-in-out 
      "
      >
        <a href={`/tags/${tag}`}>{tag}</a>
      </p>
    ))
  }
</div>
