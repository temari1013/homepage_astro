---
const allPosts = await Astro.glob('../pages/posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<div class="max-w-1xl mx-auto mt-4 pt-4 px-8 bg-white  min-h-screen " >
 <p class = " text-slate-700 text-2xl  font-semibold">タグ検索</p>
 <div class="tags">
     {tags.map((tag) => (
     <p class=
      "tag
      inline-block
      mx-1 my-0.5
      px-2 py-1 
      text-lg text-sm text-slate-100 
      bg-[#FF7043]  
      rounded-lg
      hover:shadow-xl
      hover:opacity-60
      "
    >
      <a 
        href={`/tags/${tag}`}
      >
        {tag}
      </a>
    </p>
    ))}
  </div>
</div>

