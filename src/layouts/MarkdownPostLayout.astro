---
import BaseLayout from './BaseLayout.astro'
const { frontmatter } = Astro.props
import Prose from '../components/Prose.astro'
---

<BaseLayout pageTitle={frontmatter.title}>
  <meta charset="UTF-8" />

  
    <p class="text-gray-600 text-sm">{frontmatter.pubDate.toString().slice(0, 10)}</p>
    <div class="flex flex-wrap">
      {
        frontmatter.tags.map((tag: string) => (
          <p class="tag">
            <a
              href={`/tags/${tag}`}
              class="tag
      inline-block
      mx-1 my-0.5
      px-2 py-1 
      text-lg text-sm text-slate-100 
      bg-[#FF7043]  
      rounded-lg
      hover:shadow-xl
   hover:opacity-60
   transition-all duration-300 ease-in-out 
      "
            >
              {tag}
            </a>
          </p>
        ))
      }
    </div>

    <Prose>
      <slot />
    </Prose>

</BaseLayout>
